        result = self.generate_with_logging(
            prompt=prompt,
            temperature=0.1,
            system="You are a SmallTalk refactoring expert. Apply refactorings that improve code quality while preserving behavior."
        )
        
        return {
            "refactored": result["response"],
            "error": result["error"]
        }
    
