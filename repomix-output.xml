            "cte": r'\bWITH\b.*\bAS\s*\(',
            "ranking": r'\b(ROW_NUMBER|RANK|DENSE_RANK)\s*\(',
        }
        
        import re
        for concept_id, pattern in patterns.items():
            if re.search(pattern, sql_query, re.IGNORECASE):
                if concept_id in self.graph.nodes:
                    detected.append(concept_id)
        
        return detected

