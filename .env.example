# TuoKit Configuration
# Copy this file to .env and customize the values

# Database Configuration
# PostgreSQL connection details
TUOKIT_PG_HOST=localhost
TUOKIT_PG_PORT=5432
TUOKIT_PG_DB=tuokit_knowledge
TUOKIT_PG_USER=tuokit_user
TUOKIT_PG_PASSWORD=your_secure_password

# Enable SSL for database connections (recommended for production)
ENABLE_SSL=false

# Ollama Configuration
# Local Ollama instance (default)
OLLAMA_HOST=http://localhost:11434

# For remote Ollama servers (optional)
# OLLAMA_API_KEY=your_api_key_here

# Application Settings
TUOKIT_DEBUG=false
TUOKIT_LOG_LEVEL=INFO
TUOKIT_SESSION_SECRET=generate_random_secret_here_for_production

# Feature Flags
ENABLE_KNOWLEDGE_CAPTURE=true     # Automatic knowledge capture system
ENABLE_KNOWLEDGE_GRAPH=true       # Visual knowledge relationships
ENABLE_ANALYTICS=true             # Usage analytics and metrics
ENABLE_DARK_MODE=true             # Dark mode UI option
ENABLE_COLLABORATION=false        # Multi-user features (future)

# Performance Settings
DB_POOL_MIN_CONN=1               # Minimum database connections
DB_POOL_MAX_CONN=10              # Maximum database connections
CACHE_TTL=3600                   # Cache time-to-live in seconds

# UI/UX Settings
DEFAULT_THEME=light              # light or dark
ITEMS_PER_PAGE=20               # Pagination settings
ENABLE_ANIMATIONS=true          # UI animations

# Security Settings
SESSION_TIMEOUT=3600            # Session timeout in seconds
MAX_LOGIN_ATTEMPTS=5            # Max failed login attempts
ENABLE_RATE_LIMITING=true       # API rate limiting

# Backup Settings
AUTO_BACKUP_ENABLED=false       # Automatic database backups
BACKUP_RETENTION_DAYS=30        # Keep backups for N days

# Integration Settings (future)
SLACK_WEBHOOK_URL=              # Slack notifications
DISCORD_WEBHOOK_URL=            # Discord notifications
GITHUB_TOKEN=                   # GitHub integration
